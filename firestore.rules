rules_version = '2';
service cloud.firestore {
	function getRole(role){
  	return (get(/databases/{database}/users/$(request.auth.uid)).data.role == role)
  }

	match /databases/{database}/documents {
  	match /orders {
    	allow write: if getRole("EMPLOYEE");
      allow read: if request.auth != null;
    }
    match /menus {
    	allow write: if getRole("RESTAURANT");
      allow read: if request.auth != null;
    }
    match /users {
    	allow read, write: if request.auth != null && getRole("ADMIN");
    }
    match /users/{userId} {
    	allow read, update, delete: if request.auth != null && (request.auth.uid == userId || getRole("ADMIN"));
      allow create: if getRole("ADMIN");
    }
  }
}